
{%- macro collection_name(value, system=false, partial=false) -%}
  {%- set name = value | pascal_case -%}
  {%- if system -%}
    {%- if partial -%}
      {%- set name = value | split("_") | drop_first | pascal_case | regex_replace("s$", "") -%}
      {%- set name = name if name != "Setting" else "Settings" -%}
    {%- else -%}
      {%- set name = value | pascal_case | regex_replace("s$", "") -%}
      {%- set name = name if name != "DirectusSetting" else "DirectusSettings" -%}
    {%- endif -%}
  {%- endif -%}
  {{ name }}
{%- endmacro -%}

{%- macro collection_text(value, prefix = "", suffix = "") -%}
  {{ prefix }}{{ value | space_case | lower_case }}{{ suffix }}
{%- endmacro -%}

{%- macro collection_string(value, system=false, partial=false) -%}
  {{ value | quoted }}
{%- endmacro -%}
